###
# Example: Get Products with Filtering
# Filter products by specific criteria
GET {{base}}/api/production/product?page=1&pageSize=10
Content-Type: application/json
Authorization: Bearer {{token}}

{
  "filters": [
    {
      "field": "ProductCategoryID",
      "operator": "eq",
      "value": "1"
    }
  ]
}

###
# Example: Get Products with Sorting
# Sort products by name
GET {{base}}/api/production/product?page=1&pageSize=10
Content-Type: application/json
Authorization: Bearer {{token}}

{
  "sort": {
    "sortBy": "Name",
    "sortDescending": false
  }
}

